{
  "hosting": {
    "public": "build/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "function": "preload"
      },
      {
        "source": "/top/",
        "function": "preload"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
